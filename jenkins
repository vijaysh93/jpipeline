pipeline {
    agent any

    stages {
        stage('BUILD') {
            steps {
		sh '''
			#!/bin/bash
			cd /var/lib/jenkins/workspace/cproject
			if [ $? -eq 0 ];then
			git pull https://github.com/vijaysh93/cproject.git
			else
			cd /var/lib/jenkins/workspace
			git clone https://github.com/vijaysh93/cproject.git
			cd cproject
			fi
			make
		'''
            }
        }
    }
}
